    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch do Blazor Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Chat.WebBlazorServer/bin/Debug/net9.0/Chat.WebBlazorServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Chat.WebBlazorServer",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}